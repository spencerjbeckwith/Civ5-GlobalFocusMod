<?xml version="1.0" encoding="utf-8"?>
<Mod id="$MOD_ID$" version="$VERSION$">
    <Properties>
        <Name>Global Focus</Name>
        <Teaser>Easily set or unset the focus for all your cities with one click!</Teaser>
        <Description>Use the Global Focus menu to set or unset the focus for all your cities with only one click. Puppeted cities are excluded as their focus cannot be changed.</Description>
        <Authors>Spencer Beckwith</Authors>
        <HideSetupGame>0</HideSetupGame>
        <AffectsSavedGames>1</AffectsSavedGames>
        <SupportsSinglePlayer>1</SupportsSinglePlayer>
        <SupportsMultiplayer>1</SupportsMultiplayer>
        <SupportsHotseat>1</SupportsHotseat>
        <SupportsMac>1</SupportsMac>
        <ReloadLandmarkSystem>0</ReloadLandmarkSystem>
        <ReloadStrategicViewSystem>0</ReloadStrategicViewSystem>
        <ReloadUnitSystem>0</ReloadUnitSystem>
    </Properties>
    <Dependencies />
    <References />
    <Blocks />
    <Files>
        <File md5="$GF_LUA_MD5$" import="1">GlobalFocus.lua</File>
        <File md5="$GF_XML_MD5$" import="1">GlobalFocus.xml</File>
        <File md5="$GF_TEXT_MD5$" import="1">GlobalFocusText.xml</File>
    </Files>
    <Actions>
        <OnModActivated>
            <UpdateDatabase>GlobalFocusText.xml</UpdateDatabase>
        </OnModActivated>
    </Actions>
    <EntryPoints>
        <EntryPoint type="InGameUIAddin" file="GlobalFocus.xml">
            <Name>GlobalFocus.xml</Name>
            <Description></Description>
        </EntryPoint>
    </EntryPoints>
</Mod>